
@{
    ViewData["Title"] = "OrderFailure";
}

<h1 class="text-danger text-center">Order was Failure</h1>
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-5 text-center">

                    <div class="mb-4">
                        <i class="bi bi-bell-fill text-danger" style="font-size: 4rem;"></i>
                    </div>

                    <h1 class="text-danger mb-3 fw-bold">Order is Failure!</h1>

                    <p class="lead text-muted mb-4">
                        Your order has been Failure and Try again the folowing processed. Thank you for your support.
                    </p>

                    @if (ViewData["OrderID"] != null)
                    {
                        <div class="alert alert-info d-inline-block p-2">
                            <strong>Order Id:</strong> @ViewData["OrderID"]
                        </div>
                    }

                    <hr class="my-4">

                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg px-4 py-4 gap-3">
                            <i class="bi bi-house-door"></i> Back To Home For More Order
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

