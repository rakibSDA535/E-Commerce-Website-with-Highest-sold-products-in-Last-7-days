@model IEnumerable<Order>
@* @using CardCore.Constants *@

@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-4 mb-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="display-6 fw-bold text-info mb-0">My Orders 📦</h2>

        <a href="/Identity/Account/Manage" class="btn btn-warning shadow-sm">
            <i class="bi bi-arrow-left"></i> Manage Profile
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="accordion" id="ordersAccordion">

            @foreach (var order in Model.Select((order, index) => new { order, index }))
            {
                string collapseId = $"collapse-{order.order.Id}";
                string headerId = $"heading-{order.order.Id}";

                string statusBadgeClass = OrderStatusHelper.GetBadgeClass(order.order.OrderStatus);
                decimal orderTotal = order.order.OrderDetail.Sum(i => (decimal)(i.Product.Price * i.Quantity));

                <div class="card shadow-sm mb-3 border-primary">
                    <div class="card-header p-0" id="@headerId">
                        <h5 class="mb-0">
                            <button class="btn btn-block w-100 text-start d-flex justify-content-between align-items-center py-3 px-4 @(order.index % 2 == 0 ? "bg-light" : "bg-white")"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#@collapseId"
                                    aria-expanded="@(order.index == 0 ? "true" : "false")"
                                    aria-controls="@collapseId">

                                <div class="col-8 col-sm-4 fw-bold text-dark">
                                    Order Date: <span class="text-dark">@order.order.CreateDate.ToString("dd-MM-yyyy")</span>
                                </div>

                                <div class="col-sm-4 text-center">
                                    <span class="badge @statusBadgeClass p-2 fs-6">
                                        @order.order.OrderStatus.ToString()
                                    </span>
                                </div>

                                <div class="col-4 col-sm-4 fw-bold text-end text-dark">
                                    Total: <span class="text-dark fw-bold"><b>৳</b> @orderTotal.ToString("N2")</span>
                                    <i class="bi bi-chevron-down ms-2"></i>
                                </div>
                            </button>
                        </h5>
                    </div>

                    <div id="@collapseId" class="collapse @(order.index == 0 ? "show" : "")" aria-labelledby="@headerId" data-bs-parent="#ordersAccordion">
                        <div class="card-body p-4 bg-warning">

                            <div class="d-flex justify-content-start mb-4 gap-3">
                                <span class="badge @(order.order.PaymentStatus.ToString() == "Paid" ? "bg-info" : "bg-danger") p-2 fs-6">
                                    <i class="bi bi-credit-card"></i> Payment Status: @order.order.PaymentStatus
                                </span>
                            </div>

                            <h6 class="fw-bold mb-3 mt-3 text-black">Ordered Items:</h6>
                            <div class="table-responsive">
                                <table class="table table-sm table-hover table-striped mb-0">
                                    <thead class="bg-success text-white">
                                        <tr>
                                            <th>Image</th>
                                            <th>Product</th>
                                            <th>Category</th>
                                            <th>Company</th>
                                            <th class="text-center">Price x Qty</th>
                                            <th class="text-end">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in order.order.OrderDetail)
                                        {
                                            <tr>
                                                <td>
                                                    <img src="/Images/@(string.IsNullOrEmpty(item.Product.Image) ? "no-symbol-colorful-no-text-illustration-K5hH2ehj.jpg" : item.Product.Image)"
                                                         class="img-thumbnail"
                                                         style="width:100px; height:100px; object-fit: cover; border-radius: 5px;"
                                                         alt="@item.Product.ProductName" />
                                                </td>
                                                <td class="align-middle fw-medium">
                                                    @item.Product.ProductName
                                                </td>
                                                <td class="align-middle">@item.Product.Genre.GenreName</td>
                                                <td class="align-middle">@item.Product.CompanyName</td>
                                                <td class="text-center align-middle fw-bold"><b>৳</b>@item.Product.Price.ToString("N2") x @item.Quantity</td>
                                                <td class="text-end align-middle fw-bold"><b>৳</b>@(((decimal)item.Product.Price * item.Quantity).ToString("N2"))</td> @* <--- Total Price formatted with "N2" *@
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-5 p-4" role="alert">
            <h4 class="alert-heading">No orders found! 🧺</h4>
            <p>You haven't placed any orders yet. Visit our shop!</p>
            <hr>
            <a href="/" class="btn btn-primary">Shop Now</a>
        </div>
    }
</div>

