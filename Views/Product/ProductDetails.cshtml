@model CardCore.Models.Product
@using System.Globalization

@{
    ViewData["Title"] = $"Details: {Model.ProductName}";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">

            <div class="card shadow-lg border-0 rounded-4">

                <div class="card-header bg-primary text-white p-3 rounded-top-4 d-flex justify-content-between align-items-center">
                    <h3 class="mb-0 fs-4"><i class="bi bi-info-circle-fill me-2"></i> Product Details</h3>
                    <a asp-action="Index" class="btn btn-warning fw-bold">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>

                <div class="row g-0">
                    <div class="col-md-4 text-center p-3">
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <img src="~/Images/@Model.Image" class="img-fluid rounded" alt="@Model.ProductName" />
                        }
                        else
                        {
                            <img src="~/Images/114320.jpg" class="img-fluid rounded" alt="No Image" />
                        }
                    </div>

                    <div class="col-md-7">
                        <div class="card-body p-4 p-md-5">

                            <h2 class="card-title fw-bold text-dark mb-1">@Model.ProductName</h2>
                            <h5 class="text-secondary mb-4"><i class="bi bi-building me-1"></i> @Model.CompanyName</h5>

                            <ul class="list-group list-group-flush mb-4">
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <span class="fw-bold text-muted"><i class="bi bi-tags-fill me-2"></i> Category:</span>
                                    <span class="badge bg-secondary text-uppercase py-2 px-3">@Model.GenreName</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <span class="fw-bold text-muted"><i class="bi bi-currency-dollar me-2"></i> Price:</span>
                                    <span class="fs-5 text-success fw-bolder">
                                        @Model.Price.ToString("N2", new CultureInfo("bn-BD")) ৳
                                    </span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <span class="fw-bold text-muted"><i class="me-2"></i>🧺 Stock:</span>
                                    <span class="fs-5 text-success fw-bolder"> 📦 @(Model.Stock != null ? Model.Stock.Quantity.ToString() : "N/A") </span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <span class="fw-bold text-muted"><i class="bi bi-calendar-date-fill me-2"></i> Release Date:</span>
                                    <span>@Model.ReleaseDate.ToShortDateString()</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <span class="fw-bold text-muted"><i class="bi bi-flag-fill me-2"></i> Sale Status:</span>
                                    @if (Model.OnSale)
                                    {
                                        <span class="badge py-2 px-3 bg-danger fs-6">ON SALE</span>
                                    }
                                    else
                                    {
                                        <span class="badge py-2 px-3 bg-warning text-dark fs-6">Regular</span>
                                    }
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <span class="fw-bold text-muted"><i class="bi bi-key-fill me-2"></i> Product ID:</span>
                                    <code class="fs-4">@Model.Id</code>
                                </li>
                            </ul>

                            @if (Model.ProductInformations != null && Model.ProductInformations.Any())
                            {
                                <h5 class="mt-4 text-primary border-bottom pb-2"><i class="bi bi-list-check me-1"></i> Specifications</h5>
                                <table class="table table-striped table-sm mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Description</th>
                                            <th>Made In</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detail in Model.ProductInformations)
                                        {
                                            <tr>
                                                @* <td>@detail.Description</td> *@
                                                <td>@Html.Raw(detail.Description?.Replace("\n", "<br />"))</td>
                                                <td>@detail.MadeIn</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-light p-4 rounded-bottom-4 d-flex justify-content-end">
                    <a asp-action="UpdateProduct" asp-route-id="@Model.Id" class="btn btn-primary me-2 fw-bold">
                        <i class="bi bi-pencil-square"></i> Edit Product
                    </a>
                    <a asp-action="DeleteProduct" asp-route-id="@Model.Id"
                       class="btn btn-danger fw-bold"
                       onclick="return confirm('Are you sure you want to delete this product??');">
                        <i class="bi bi-trash-fill"></i> Delete
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
































