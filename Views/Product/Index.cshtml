@section Scripts {
    <script>
        //========================Drop Down Detail view=================================
        document.addEventListener('DOMContentLoaded', function() {
            var detailToggles = document.querySelectorAll('.detail-toggle');
            detailToggles.forEach(function(button) {
                var collapseElement = document.getElementById(button.getAttribute('data-bs-target').substring(1));
                collapseElement.addEventListener('show.bs.collapse', function () {
                    button.querySelector('i').classList.remove('bi-caret-down-fill');
                    button.querySelector('i').classList.add('bi-caret-up-fill');
                });
                collapseElement.addEventListener('hide.bs.collapse', function () {
                    button.querySelector('i').classList.remove('bi-caret-up-fill');
                    button.querySelector('i').classList.add('bi-caret-down-fill');
                });
            });
        });
        //===============================================================================
        //=====================Product Details popup Modal(S2)===========================
        function loadProductDetails(productId) {
            // মডেলের বডি রিসেট করে লোডিং স্পিনার দেখান
            const modalBody = document.getElementById('productDetailBody');
            modalBody.innerHTML = '<div class="spinner-border text-info" role="status"><span class="visually-hidden">Loading...</span></div>';

            // আংশিক ভিউ লোড করার জন্য AJAX কল
            fetch(`/Product/GetProductDetailsPartial?id=${productId}`) // আপনার কন্ট্রোলার এবং অ্যাকশন পাথ অনুযায়ী এটি পরিবর্তন করুন
            .then(response => {
                // নিশ্চিত করুন যে স্ট্যাটাস ঠিক আছে (যেমন, 200 OK)
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                    return response.text();
                })
            .then(htmlContent => {
                // সফলভাবে লোড হলে মডেলের বডিতে কন্টেন্ট দেখান
                modalBody.innerHTML = htmlContent;
                })
            .catch(error => {
                // কোনো ত্রুটি হলে ত্রুটির বার্তা দেখান
                console.error('Error loading product details:', error);
                modalBody.innerHTML = '<div class="alert alert-danger">পণ্য বিবরণ লোড করার সময় একটি ত্রুটি হয়েছে।</div>';
            });
        }
        //===============================================================================
    </script>
}
