@using CardCore.Constants
@model IEnumerable<Order>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "AllOrders";
}
<div style="width:100%" class="mt-2">
    <h4> Orders</h4>
    @if (Model != null && Model.Count() > 0)
    {
        <table class="table table-striped">
            <tr>
                <th>OrderDate</th>
                <th>Name</th>
                <th>MobileNo</th>
                <th>Email</th>
                <th>Address</th>
                <th>PaymentStatus</th>
                <th>OrderStatus</th>
                <th>Actions</th>

            </tr>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.CreateDate.ToString("dd-MM-yyyy")</td>
                    <td>@order.Name</td>
                    <td>@order.MobileNumber</td>
                    <td>@order.Email</td>
                    <td>@order.Address</td>
                    <td>@order.PaymentMethod | @(order.PaymentStatus)</td>
                    @* <td>@order.OrderStatus</td> *@
                    <td>
                        @{
                            var statusEnum = (EOrderStatus)order.OrderStatus;
                            var badgeClass = OrderStatusHelper.GetBadgeClass(statusEnum);
                        }
                        <span class="badge @badgeClass py-1 px-3 rounded-3">
                            @statusEnum.ToString()
                        </span>
                    </td>
                    <td>
                        <button type="button" data-bs-toggle="modal" data-bs-target="#modal-@order.Id" class="btn btn-primary">
                            <i class="bi bi-pencil"></i>
                            Order-Detail
                        </button>
                        <a asp-action="UpdateOrderStatus" asp-route-orderId="@order.Id" class="btn btn-info"><i class="bi bi-cash-stack"></i>Order Status</a>
                        <a asp-action="TogglePaymentStatus" asp-route-orderId="@order.Id" class="btn btn-warning"><i class="bi bi-recycle"></i>Payment Status</a>
                        <form asp-action="DeleteOrder" asp-controller="AdminOperations" method="post" style="display:inline;" onsubmit="return confirm('Are you sure to ⚔️Delete⚔️ this status Permanently?');">
                            <input type="hidden" name="orderId" value="@order.Id" />

                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                        @await Html.PartialAsync("/Views/AdminOperations/_OrderDetailModal.cshtml", new OrderDetailModalDTO { DivId = order.Id.ToString(), OrderDetail = order.OrderDetail })
                    </td>

                </tr>

            }
        </table>

    }
    else
    {
        <h5>No orders</h5>
    }


</div>
