@model IEnumerable<Genre>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Category List";
}

<div class="container mt-4 mb-5">
    <div class="row">
        <div class="col-12">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="display-6 fw-bold text-primary mb-0">Category List</h2>

                <a asp-action="AddGenre" asp-controller="Genre" class="btn btn-primary btn-lg shadow-sm">
                    <i class="bi bi-plus-circle"></i> ADD NEW CATEGORY
                </a>
            </div>

            <div class="card shadow-lg border-0">
                <div class="card-body p-0">

                    <table class="table table-hover table-striped mb-0">
                        <thead class="bg-warning">
                            <tr>
                                <th scope="col" class="py-3 px-4">Category name</th>
                                <th scope="col" class="py-3 px-4 text-center" style="width: 250px;">Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var genre in Model)
                            {
                                <tr>
                                    <td class="py-3 px-4 fw-medium fs-5">@genre.GenreName</td>

                                    <td class="py-3 px-4 text-center">

                                        <a asp-action="UpdateGenre" asp-controller="Genre" asp-route-id="@genre.Id" class="btn btn-success me-2" title="Edit">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>

                                        <a asp-action="DeleteGenre" asp-controller="Genre" asp-route-id="@genre.Id" class="btn btn-danger" title="Delete"
                                           onclick="return window.confirm('Are you sure that this Category @genre.GenreName Delete Permanently?')">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>

                                    </td>
                                </tr>
                            }

                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="2" class="text-center text-muted py-4">
                                        There is no category. Please,Add new category.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</div>

